# MongoDB
MONGO_URL=mongodb://localhost:27017
DB_NAME=skatebay_db

# Security
APP_ADMIN_PASSWORD=your_admin_password_here
JWT_SECRET=your_jwt_secret_here

# CORS
CORS_ORIGINS=*

# eBay Environment: sandbox or production
EBAY_ENV=production

# eBay Sandbox credentials (get from developer.ebay.com)
EBAY_CLIENT_ID=your_sandbox_client_id
EBAY_CLIENT_SECRET=your_sandbox_client_secret
EBAY_REDIRECT_URI=https://your-domain.com/api/ebay/auth/callback
EBAY_RUNAME=your_sandbox_runame
EBAY_SCOPES=https://api.ebay.com/oauth/api_scope/sell.inventory https://api.ebay.com/oauth/api_scope/sell.account

# eBay Production credentials
EBAY_PROD_CLIENT_ID=your_production_client_id
EBAY_PROD_CLIENT_SECRET=your_production_client_secret
EBAY_PROD_REDIRECT_URI=https://your-domain.com/api/ebay/auth/callback
EBAY_PROD_RUNAME=your_production_runame

# LLM Key (for AI features)
EMERGENT_LLM_KEY=your_emergent_llm_key

# Frontend URL
FRONTEND_URL=https://your-domain.com
